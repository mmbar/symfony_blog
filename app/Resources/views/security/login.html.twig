{% extends 'base.html.twig' %}
{% block body %}
    <div class="col-sm-6">
    	<form action="{{ path('login') }}" method="post">
    		<div class="form-group">
    			<label for="username">Użytkownik:</label> <input type="text"
    				id="username" name="_username" class="form-control" />
    		</div>
    		<div class="form-group">
    			<label for="password">Hasło:</label> <input type="password"
    				id="password" name="_password" class="form-control" />
    		</div>
    
    		<button type="submit" class="btn btn-default">Logowanie</button>
    	</form>
    </div>
{% endblock %}

